<Window x:Class="Auction.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Auction"
        mc:Ignorable="d" Background="#ffffff"
        Title="Login" Height="300" FontSize="14" Width="300">


    <Border Background="#fafafa" Margin="10" CornerRadius="10">
        <StackPanel Margin="20">
            <Label Content="Login" Foreground="Black"
               FontSize="18" HorizontalAlignment="Center" />
            <Separator></Separator>
            <Label Content="Username" Foreground="Black" />
            <TextBox Name="txtUsername" Background="#ffffff"
                     Foreground="#454c56" FontSize="14"
                     Padding="2"/>
            <Label Content="Password" Foreground="Black" />
            <PasswordBox Name="txtPassword" Background="#ffffff"
                     Foreground="#454c56" FontSize="14"
                     Padding="2"/>
            <Button Name="btnSubmit" Background="#eee"
                     Foreground="Black" FontSize="14"
                    Content="Submit" Margin="60 25 60 0" Padding="3"
                    Click="BtnSubmit_Click" />
        </StackPanel>
    </Border>


</Window>
